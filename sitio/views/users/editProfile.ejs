<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/<%= css %>">
    <%- include('../partials/header') %>
<body>
<div class="container">
    <div class="row justify-content-center">
        <h2 class="col-12 text-center tituloPerfilEdit">Mi perfil</h2>
        
        <section class="editarPerfilSection">
            <h3 class="text-center">Edita tus datos:</h3>
            <div class="editInfoContenedor">
            <form action="/user/profile/<%= usuario.id %>/edit?_method=PUT" method="POST">
                    <div class="col-12 divEdit">
                    <label for="nombre">Nombre:</label>
                    <input type="text" name="nombre" value="<%= usuario.name %>" id="inputUnoEdit">
                    </div>
                    
                    <div class="col-12 divEdit">
                    <label for="email">Email:</label>
                    <input type="email" name="email" value="<%= usuario.email %>" id="inputDosEdit">
                    </div>

                    <div class="col-12 divEdit">
                        <label for="telefono">Telefono:</label>
                        <input type="text" name="telefono" value="<%= usuario.telefono %>" id="inputTresEdit">
                    </div>

                    <div class="col-12 divEdit">
                    <label for="direccion">Direcci√≥n:</label>
                    <input type="text" name="direccion" value="<%= usuario.direccion %>" id="inputCuatroEdit">
                    </div>

                    <div class="divEdit">
                    <button type="submit" value="<%= usuario.id %>" class="btnenviar">Enviar</button>
                    <button type="reset" class="btnreiniciar">Reiniciar</button>
                    </div>
            </form>

            <form action="/user/profile/<%= usuario.id %>/delete?_method=DELETE" method="POST">
                <button type="submit">Borrar usuario</button>
            </form>
            </div>
        </section>
    </div>
</div>

    <%- include('../partials/footer') %>
</body>
</html>