               <input type="radio" name="medio" value="op2">MasterCard
                <input type="radio" name="medio" value="op3">MercadoPago
            </form>
            </article>
    </div>
    <!---seccion: formas de envio-->
    <div class="col-md-6" id="formasenvio">
    <h4 class="titulos">Formas de envio</h4>
    <article>
        <form action="">
        <label for="formaenvio"></label>
            <input type="radio" name="formaenvio" value="oca">OCA
            <input type="radio" name="formaenvio" value="moto">Moto
            <input type="radio" name="formaenvio" value="andreini">Andreini
        </form>
    </article>
    </div>
</div>
</div>
<!--Acá termina el container-->
<!--acá empieza otro container-->
<div class="container">
    <div class="row">
            <div class="col-sm-12 col-md-6">
                <h5 id="preciototal">Precio total:</h5>
            </div>
        <div class="col-sm-12 col-md-6" id="comprarbtn">
        <form>
            <button type="">Comprar</button>
        </form>
        </div>
    </div>
</div>

</section>
<%- include('partials/footer') %>
</body>
</html>